/*C program to check a string is pallindrome*/

#include<stdio.h>
#include<string.h>
int main()
  {
    char string[1000];  
    int i,n,c=0;
    printf("Enter  the string:\n");
    gets(string);
    n=strlen(string);
    for(i=0;i<n/2;i++)  
      {
    	if(string[i]==string[n-i-1])
    	  {
    	    c++;
    	  }
      }
    if(c==i)
     {
 	   printf("The string is palindrome \n");
     }
    else
     {
       printf("The string is not palindrome \n");
     }
    return 0;
 }
