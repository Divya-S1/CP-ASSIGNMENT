/*sum and average of n integers in an array*/

#include<stdio.h>
void main()
   {
     int a[30],i,n,sum=0;
     float average;
     printf("Enter the number of elements in the array\n");
     scanf("%d", &n);
     printf("Enter the array elements \n");
     for(i=0; i<n;i++)
     scanf("%d",&a[i]);
     printf("the elements are\n");
     for (i=0; i<n; i++)
     printf("%d\t",a[i]);
       {
        sum=sum+a[i];
       }
     average=sum/n;
     printf("\n The sum of the elements are %d\n",sum);
     printf("\n The average of the elements is %f\n",average);
   }
